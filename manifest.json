{
  "manifest_version": 3,
  "name": "Flan Dark Mode",
  "version": "1.0",
  "description": "Toggles dark mode on websites when clicking the extension icon. Unlike other extensions, this one actually works and it's very light.",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["<all_urls>"] ,
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "defaultTitle": "Toggle Dark Mode",
    "defaultIcon": "icon_off.png"
  },
  "icons": {
    "16": "icon_off.png",
    "32": "icon_off.png",
    "48": "icon_off.png",
    "128": "icon_off.png"
  }
}
