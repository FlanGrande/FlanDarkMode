{
  "manifest_version": 3,
  "name": "Invert Filter Extension",
  "version": "1.0",
  "description": "Applies an invert filter to all webpages, except images and videos.",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["<all_urls>"] ,
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "defaultTitle": "Toggle Dark Mode",
    "defaultIcon": "icon_off.png"
  },
  "icons": {
    "16": "icon_off.png",
    "32": "icon_off.png",
    "48": "icon_off.png",
    "128": "icon_off.png"
  }
}
